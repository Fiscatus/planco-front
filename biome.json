{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!**/dist/**/*", "!**/node_modules/**/*", "!**/.zed/**/*", "!**/.vscode/**/*"]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "attributePosition": "auto",
    "bracketSpacing": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingCommas": "none",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "attributePosition": "multiline",
      "bracketSpacing": true,
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "overrides": [
    {
      "includes": ["**/*.ts", "**/*.tsx", "**/*.mts", "**/*.cts"],
      "linter": {
        "rules": {
          "style": { "useConst": "error" },
          "suspicious": { "noVar": "error" },
          "complexity": { "noArguments": "error" },
          "correctness": {
            "noUnusedImports": {
              "options": {},
              "level": "error",
              "fix": "safe"
            }
          }
        }
      }
    }
  ]
}
